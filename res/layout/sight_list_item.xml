<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="10.0dip" >

    <ImageView
        android:id="@+id/sight_logo"
        android:layout_width="90.0dip"
        android:layout_height="90.0dip"
        android:src="@drawable/sight_exa"
        android:scaleType="fitXY"
        android:contentDescription="景点图片" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90.0dip"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingLeft="8.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sight_title"
                    style="@style/myStyle.BlackContentTitleText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2" />

                <TextView
                    android:id="@+id/sight_level"
                    style="@style/myStyle.BlueBigText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="3.0dip"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="right"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sight_price"
                        style="@style/myStyle.OrangeContentTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sight_up"
                        style="@style/myStyle.GrayNormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sight_discount"
                        style="@style/myStyle.GrayNormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/sight_refrence_price"
                        style="@style/myStyle.GrayNormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="折" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/sight_distance"
            style="@style/myStyle.GrayNormalText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_hotel_distance"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>