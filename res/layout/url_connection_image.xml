<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffd3d3d3"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <mayi.slidingmenudemo.GuideGallery
                    android:id="@+id/image_wall_gallery"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:fadingEdge="none"
                    android:spacing="1dip"
                    android:unselectedAlpha="1" >
                </mayi.slidingmenudemo.GuideGallery>

                <LinearLayout
                    android:id="@+id/gallery_point_linear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_wall_gallery"
                    android:layout_alignRight="@id/image_wall_gallery"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="3dp" >
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/first_buy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_buy"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:text="98元"
                    android:textColor="#ff008080"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/first_purchase"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_bnt"
                    android:text="立即抢购"
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_buy"
                android:orientation="vertical" >

                <TextView
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="年票简介"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line" />

                <TextView
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:singleLine="false"
                    android:text="@string/intro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_buy"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bnt_flow"
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_layout_bnt"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="3dp"
                    android:text="使用流程"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_flow"
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/flow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_buy"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bnt_question"
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_layout_bnt"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="3dp"
                    android:text="常见问题"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_question"
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/question" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_buy"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bnt_partner"
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_layout_bnt"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="3dp"
                    android:text="分销商"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_partner"
                    style="@style/myStyle.BlackNormalText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/partner" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/second_buy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_buy"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="98元"
            android:textColor="#ff008080"
            android:textSize="22sp" />

        <Button
            android:id="@+id/second_purchase"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_bnt"
            android:text="立即抢购"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </RelativeLayout>

</FrameLayout>