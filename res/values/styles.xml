<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme" parent="Theme.Sherlock">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
    
    <style name="ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <!-- <item name="android:background">@drawable/titlebar_whole</item> -->
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>  
        <item name="android:showDividers">end</item>
        <item name="android:divider">@drawable/divline</item>
        <item name="android:titleTextStyle">@style/myStyle.WhiteHugeText</item>
    </style>

    <style name="myStyle" parent="@*android:style/Widget" />

    <style name="myStyle.BlackContentTitleText" parent="@style/myStyle">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="myStyle.BlueBigText" parent="@style/myStyle">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff0da6df</item>
    </style>

    <style name="myStyle.OrangeContentTitleText" parent="@style/myStyle">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#fff7941d</item>
    </style>

    <style name="myStyle.GrayNormalText" parent="@style/myStyle">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff7f8081</item>
    </style>
    
    <style name="myStyle.WhiteHugeText" parent="@style/myStyle">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

</resources>